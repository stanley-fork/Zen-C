// Test file to verify typechecker improvements
// Run with: ./zc tests/analysis/test_typechecker.zc

// Standalone test - no imports needed

test "Division by Zero Check" {
    let x: i32 = 10;
    // Good division
    let _good: i32 = x / 2;
}

test "Shift Operators Check" {
    let x: i32 = 1;
    // Good shift
    let _good: i32 = x << 4;
}

fn test_return_type() -> i32 {
    return 42;
}

test "Return Type Check" {
    let _ = test_return_type();
}

fn test_void_function() {
    // No return needed
}

test "Void Function Check" {
    test_void_function();
}

fn test_match_exhaustiveness(x: i32) -> i32 {
    match x {
        1 => return 1;
        2 => return 2;
        _ => return 0;  // Default case
    }
    return 0; // Unreachable but satisfies return check
}

test "Match Exhaustiveness Check" {
    let match_result = test_match_exhaustiveness(1);
    // Suppress unused variable warning
    let _ = match_result;
}
